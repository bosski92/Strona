@model Strona.Models.Movie

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edycja filmu</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label">Tytuł</label>
                <input asp-for="Title" class="form-control shadow-lg" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label">Data premiery</label>
                <input asp-for="ReleaseDate" class="form-control shadow-lg" />
                <span asp-validation-for="ReleaseDate" class="text-danger shadow-lg"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label">Gatunek</label>
                <input asp-for="Genre" class="form-control shadow-lg" />
                <span asp-validation-for="Genre" class="text-danger shadow-lg"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label">Ocena</label>
                <input asp-for="Rating" class="form-control shadow-lg" />
                <span asp-validation-for="Rating" class="text-danger shadow-lg"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-dark shadow-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
